<div class="col-xs-6 col-xs-push-4">
  <p id="notice"><%= notice %></p>

  <h1>Listando Servicios Turisticos</h1>

  <table>
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Foto</th>
        <th>Descripcion</th>
        <th>Apertura</th>
        <th>Clausura</th>
        <th>Direccion</th>
        <th>Contacto</th>
        <th>Lunes</th>
        <th>Martes</th>
        <th>Miercoles</th>
        <th>Jueves</th>
        <th>Viernes</th>
        <th>Sabado</th>
        <th>Domingo</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @servicios_turisticos.each do |servicios_turistico| %>
        <tr>
          <td><%= servicios_turistico.nombre %></td>
          <td><%= servicios_turistico.foto %></td>
          <td><%= servicios_turistico.descripcion %></td>
          <td><%= servicios_turistico.apertura %></td>
          <td><%= servicios_turistico.clausura %></td>
          <td><%= servicios_turistico.direccion %></td>
          <td><%= servicios_turistico.contacto %></td>
          <td><%= servicios_turistico.lunes %></td>
          <td><%= servicios_turistico.martes %></td>
          <td><%= servicios_turistico.miercoles %></td>
          <td><%= servicios_turistico.jueves %></td>
          <td><%= servicios_turistico.viernes %></td>
          <td><%= servicios_turistico.sabado %></td>
          <td><%= servicios_turistico.domingo %></td>
          <td><%= link_to 'Show', servicios_turistico %></td>
          <td><%= link_to 'Edit', edit_servicios_turistico_path(servicios_turistico) %></td>
          <td><%= link_to 'Destroy', servicios_turistico, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Servicios turistico', new_servicios_turistico_path %>
</div>
