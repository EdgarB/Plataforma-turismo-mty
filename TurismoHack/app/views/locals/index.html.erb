<div class="col-xs-9 col-xs-push-3">
  <div class="container">
    <br><br>
    <p id="notice"><%= notice %></p>

    <h1>Lista de locales</h1>

      <% @locals.each do |local| %>
        <div  class="col-xm-12 col-md-4">
          <div class="thumbnail">
            <div class="container">
              <div class="row">
                <div class="col-xs-12">
                  <%= local.nombre %>
                </div>

              </div>
              <div class="row">
                <div class="col-xs-12">
                  <%= local.apertura %>

                </div>
                <div class="col-xs-12">
                  <%= local.clausura %>
                </div>
              </div>
              <div class="row">
                <div class="col-xs-12">
                  <%= local.descripcion %>
                </div>
              </div>
            </div>


            <div class="buttons" style="margin-top:10px; margin-bottom:10px">
              <%= link_to 'Show', local, :class => 'btn' %>
              <%= link_to 'Edit', edit_local_path(local), :class => 'btn' %>
              <%= link_to 'Destroy', local, method: :delete, data: { confirm: 'Are you sure?' }, :class =>'btn' %>
            </div>

          </div>
        </div>


      <% end %>


    <br>


  </div>
  <%= link_to 'New Local', new_local_path, :class => 'btn' %>
</div>
