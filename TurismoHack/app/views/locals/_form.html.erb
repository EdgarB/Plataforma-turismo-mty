<%= form_for(@local) do |f| %>
  <% if @local.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@local.errors.count, "error") %> prohibited this local from being saved:</h2>

      <ul>
      <% @local.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <div class="field">
      <%= f.label :nombre, "Nombre del local:" %><br>
      <%= f.text_field :nombre, :class=>'form-control', :placeholder=>'Ingrese el nombre del local.' %>
    </div>
  </div>
  <div class="form-group">
    <div class="field">
      <%= f.label :apertura, "Hora de abrir:" %><br>
      <%= f.time_select :apertura %>
    </div>
  </div>

  <div class="form-group">
    <div class="field">
      <%= f.label :clausura , "Hora de cerrar:"%><br>
      <%= f.time_select :clausura %>
    </div>
  </div>

  <div class="form-group">
    <div class="field">
      <%= f.label :descripcion, "Descripción general del local: "%><br>
      <%= f.text_area :descripcion , :class=>'form-control', :placeholder => 'Ingrese la descripción del local.' %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "aceptar", :class =>"btn btn-primary"  %>
  </div>
<% end %>
